<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.profile.language.LanguageFragment">

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_horizontal_standard"
        android:layout_marginTop="@dimen/layout_margin_top_extended"
        app:backgroundTint="@color/white"
        app:backgroundTintMode="src_in"
        app:icon="@drawable/ic_back_arrow_24dp"
        app:iconTint="@color/colorGrayPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top_header"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:text="@string/language_page_title"
        android:textColor="@color/colorBlackPrimary"
        android:textSize="@dimen/text_size_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeLangOnEnglishButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_horizontal_standard"
        android:layout_marginTop="@dimen/layout_margin_top_extended"
        android:layout_marginEnd="@dimen/layout_margin_horizontal_standard"
        android:drawableEnd="@drawable/ic_accepted_16dp"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:gravity="start"
        android:padding="16dp"
        android:text="@string/button_lang_en"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_primary"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeLangOnRussianButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_horizontal_standard"
        android:layout_marginTop="@dimen/layout_margin_vertical_standard"
        android:layout_marginEnd="@dimen/layout_margin_horizontal_standard"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:gravity="start"
        android:padding="16dp"
        android:text="@string/button_lang_ru"
        android:textColor="@color/colorGrayDark"
        android:textSize="@dimen/text_size_primary"
        app:backgroundTint="@color/colorGrayLighter"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeLangOnEnglishButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeLangOnGermanButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_horizontal_standard"
        android:layout_marginTop="@dimen/layout_margin_vertical_standard"
        android:layout_marginEnd="@dimen/layout_margin_horizontal_standard"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:gravity="start"
        android:padding="16dp"
        android:text="@string/button_lang_ge"
        android:textColor="@color/colorGrayDark"
        android:textSize="@dimen/text_size_primary"
        app:backgroundTint="@color/colorGrayLighter"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeLangOnRussianButton" />

</androidx.constraintlayout.widget.ConstraintLayout>